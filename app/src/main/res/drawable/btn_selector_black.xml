<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/gray_dark_light" />
            <corners android:radius="@dimen/common_size_4dp" />
            <solid android:color="@color/black" />
            <padding android:bottom="@dimen/common_size_1dp" android:left="@dimen/common_size_1dp" android:right="@dimen/common_size_1dp" android:top="@dimen/common_size_1dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="false">
        <shape>
            <stroke android:width="1dp" android:color="@color/gray_dark_light" />
            <corners android:radius="@dimen/common_size_4dp" />
            <solid android:color="@color/black" />
            <padding android:bottom="@dimen/common_size_1dp" android:left="@dimen/common_size_1dp" android:right="@dimen/common_size_1dp" android:top="@dimen/common_size_1dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@color/gray_dark_light" />
            <corners android:radius="@dimen/common_size_4dp" />
            <solid android:color="@color/black" />
            <padding android:bottom="@dimen/common_size_1dp" android:left="@dimen/common_size_1dp" android:right="@dimen/common_size_1dp" android:top="@dimen/common_size_1dp" />
        </shape>
    </item>
</selector>