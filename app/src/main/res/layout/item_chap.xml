<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_size_52dp"
    android:paddingLeft="@dimen/common_size_8dp"
    android:paddingRight="@dimen/common_size_8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_chap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_circle" />

    <TextView
        android:id="@+id/name_chap"
        style="@style/TextTitle"
        android:layout_gravity="center_vertical"
        android:text="@string/common_truyenkhac" />
</LinearLayout>